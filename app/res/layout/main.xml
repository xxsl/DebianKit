<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="2dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView_cpu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_unknown"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:text="@string/str_cpu"
        android:onClick="onClick_cpu"                
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView_cpu_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/TextView_mem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_unknown"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:text="@string/str_mem"
        android:onClick="onClick_mem"                
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView_mem_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/TextView_ext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_unknown"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:text="@string/str_ext"
        android:onClick="onClick_ext"                
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView_ext_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/TextView_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawablePadding="2dp"
        android:drawableLeft="@drawable/ic_unknown"
        android:text="@string/str_dev"
        android:onClick="onClick_dev"                
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
    />

    <TextView
        android:id="@+id/TextView_dev_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/TextView_mod"
