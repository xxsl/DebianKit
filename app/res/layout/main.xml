    />

    <TextView
        android:id="@+id/TextView_mod_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/TextView_mnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawablePadding="2dp"
        android:drawableLeft="@drawable/ic_unknown"
        android:text="@string/str_mnt"
        android:onClick="onClick_mnt"                
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
    />

    <TextView
        android:id="@+id/TextView_mnt_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/TextView_sux"
        android:layout_width="match_parent"
